<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zachlowe.android.fitnessplanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zachlowe.android.fitnessplanner.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ExerciseListActivity"
            android:label="@string/app_name" />
        <activity android:name=".ExercisePagerActivity"
            android:label="@string/app_name" />
        <activity android:name=".RoutineActivity"
            android:label="@string/app_name" />
        <activity android:name=".RoutineListActivity"
            android:label="@string/app_name" />
    </application>

</manifest>
